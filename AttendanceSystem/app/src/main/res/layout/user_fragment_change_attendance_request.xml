<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_Fragment_changeAttendanceRequest">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                            android:id="@+id/edittext_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="5dp"
                            android:hint="Date (Eg. dd-mm-yyyy)"
                            android:inputType="text"
                            android:paddingLeft="20dp"
                            android:maxLength="10"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:editable="false"
                            android:textColorHint="@android:color/black"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="15sp" />
                    <Button
                        android:id="@+id/button_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/createaccountbtn_"
                        android:drawableLeft="@drawable/icon_date_white"
                        android:drawablePadding="20dp"
                        android:fontFamily="@font/doppio_one"
                        android:padding="10dp"
                        android:text="Set Date"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittext_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Time (Eg. hh-mm)"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:maxLength="10"
                        android:editable="false"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/black"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/button_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/createaccountbtn_"
                        android:drawableLeft="@drawable/icon_time_white"
                        android:drawablePadding="20dp"
                        android:fontFamily="@font/doppio_one"
                        android:padding="10dp"
                        android:text="Set Time"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textINputlayout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/CustomTheme"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/icon_reason"
                    android:drawablePadding="20dp"
                    android:hint="Reasons"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    app:met_floatingLabel="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_request"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/createaccountbtn_"
                    android:drawableLeft="@drawable/icon_request"
                    android:drawablePadding="0dp"
                    android:fontFamily="@font/doppio_one"
                    android:padding="10dp"
                    android:text="Request"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>